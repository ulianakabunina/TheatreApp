<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Панель администратора"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_manage_actors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление Актерами (ID, ФИО)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_manage_performances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление Спектаклями и Ролями"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_manage_assignments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Назначение Актеров на Роли"
        android:layout_marginBottom="16dp"/>

</LinearLayout>