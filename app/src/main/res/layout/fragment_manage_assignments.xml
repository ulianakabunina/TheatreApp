<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назначение Актеров на Роли (FR-07)"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Выберите Спектакль:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinner_plays"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Выберите Актера:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/spinner_actors"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Укажите Название Роли:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/edit_text_role_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Например: Чацкий"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/button_assign_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назначить Актера на Роль"/>

    </LinearLayout>
</ScrollView>